{
  "name": "conun-drive",
  "productName": "Conun Drive",
  "version": "1.0.0",
  "description": "Conun Driver App",
  "main": "dist/index.js",
  "scripts": {
    "start": "parcel src/index.html --out-dir parcel-dist",
    "build": "parcel build src/index.html --out-dir dist/parcel-build --public-url ./",
    "dev": "concurrently -k \"yarn start\" \"yarn:electron\"",
    "copy-assets": "copyfiles -f \"electron/assets/**/*\" \"dist/assets\"",
    "electron": "wait-on tcp:1234 && tsc && yarn copy-assets && electron .",
    "make": "yarn build && tsc && yarn copy-assets && electron-builder",
    "release": "yarn build && electron-builder --publish=always",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Ivan Saldano",
    "email": "ivanms1@gmail.com"
  },
  "license": "MIT",
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "./out"
    },
    "appId": "conun.app",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "autoprefixer": "9.8.6",
    "concurrently": "^6.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-react": "^7.22.0",
    "parcel-bundler": "1.12.3",
    "postcss-modules": "3.2.2",
    "sass": "^1.32.8",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1"
  },
  "dependencies": {
    "@svgr/parcel-plugin-svgr": "^5.5.0",
    "@types/react-router-dom": "^5.1.7",
    "classnames": "^2.3.1",
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "ipfs-core": "^0.5.4",
    "it-all": "^1.0.5",
    "jimp": "^0.16.1",
    "libp2p": "^0.30.12",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-indiana-drag-scroll": "^2.0.1",
    "react-query": "^3.13.6",
    "react-router-dom": "^5.2.0",
    "uint8arrays": "^2.1.4"
  }
}
